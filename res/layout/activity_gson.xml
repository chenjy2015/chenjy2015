<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_gson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_litte"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/dimen20" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/create_gson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/create_gson" />

        <Button
            android:id="@+id/read_gson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/read_gson" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_gson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_gson"
        android:textSize="@dimen/dimen10"
        android:inputType="number"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/content_gson"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/dimen12" />

</LinearLayout>